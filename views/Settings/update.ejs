<%- contentFor('HeaderCss') %>
<!-- perticular page css -->
<!-- Full Calendar -->
<link href="public/plugins/fullcalendar/css/fullcalendar.min.css" rel="stylesheet">

<%- contentFor('body') %>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Email</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Update Email</h4>
                        <form action="/email-updated?id=<%- smtp[0]._id %>" method="POST">
                            <div class="form-group">
                                <label>E-mail * </label>
                                <input type="email" value="<%- smtp[0].email %>" name="email" class="form-control"
                                    required placeholder="E-mail">
                            </div>

                            <div class="form-group">
                                <label>Password * </label>
                                <input type="text" value="<%- smtp[0].password %>" name="password" class="form-control"
                                    required placeholder="Password">
                            </div>

                            <div class="form-group">
                                <div>
                                    <button type="submit" class="btn btn-success waves-effect waves-light"><i
                                            class="mdi mdi-arrow-up-drop-circle"></i><span></span>&emsp;Update</button>
                                    &emsp;&emsp;
                                    <a class="btn btn-primary waves-effect waves-light" href="/settings"
                                        role="button"><i class="mdi mdi-arrow-left"></i><span></span>&emsp;Back</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <%- contentFor('FooterJs') %>
            <!--Full calendar-->
            <script src="public/plugins/jquery-ui/jquery-ui.min.js"></script>
            <script src="public/plugins/moment/moment.js"></script>
            <script src="public/plugins/fullcalendar/js/fullcalendar.min.js"></script>
            <script src="public/assets/pages/calendar-init.js"></script>